<%- include('../partials/header') %>
<div class="container d-flex align-items-center justify-content-center min-vh-100">
  <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
    <div class="text-center mb-4">
      <i class="bi bi-train-front-fill text-primary" style="font-size: 2.5rem;"></i>
      <h3 class="fw-bold mt-2 mb-0">Login Akun</h3>
      <p class="text-muted mb-0">Masuk untuk memesan tiket kereta</p>
    </div>
    <% if (error_msg) { %>
      <div class="alert alert-danger py-2"><%= error_msg %></div>
    <% } %>
    <% if (success_msg) { %>
      <div class="alert alert-success py-2"><%= success_msg %></div>
    <% } %>
    <form action="/login" method="POST" autocomplete="off">
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control bg-light" id="email" name="email" placeholder="Masukkan email" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control bg-light" id="password" name="password" placeholder="Masukkan password" required>
      </div>
      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary fw-bold">
          <i class="bi bi-box-arrow-in-right"></i> Login
        </button>
      </div>
    </form>
    <div class="text-center mt-3">
      <span class="text-muted">Belum punya akun?</span>
      <a href="/register" class="fw-bold text-decoration-none">Daftar</a>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>