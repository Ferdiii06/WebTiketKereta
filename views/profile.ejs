<%- include('./partials/header') %>
<div class="container d-flex align-items-center justify-content-center min-vh-100">
  <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
    <div class="text-center mb-4">
      <!-- Foto profil default -->
<img
  src="<%= user.profileImage ? '/uploads/' + user.profileImage : 'https://ui-avatars.com/api/?name=' + encodeURIComponent(user.name) + '&background=0D8ABC&color=fff&size=100' %>"
  alt="Foto Profil"
  class="rounded-circle mb-2"
  width="100"
  height="100">
      <h3 class="fw-bold mt-2 mb-0">Profil Pengguna</h3>
      <p class="text-muted mb-0">Informasi akun Anda</p>
    </div>
    <ul class="list-group list-group-flush mb-3">
      <li class="list-group-item bg-light">
        <strong>Nama:</strong>
        <span class="float-end"><%= user.name %></span>
      </li>
      <li class="list-group-item bg-light">
        <strong>Email:</strong>
        <span class="float-end"><%= user.email %></span>
      </li>
      <li class="list-group-item bg-light">
        <strong>Tanggal Daftar:</strong>
        <span class="float-end"><%= user.date ? user.date.toLocaleDateString('id-ID') : '-' %></span>
      </li>
      <li class="list-group-item bg-light">
        <strong>Status Member:</strong>
        <span class="float-end">
          <%= user.isPremium ? 'Premium' : 'Reguler' %>
        </span>
      </li>
      <li class="list-group-item bg-light">
        <strong>Jumlah Tiket Dipesan:</strong>
        <span class="float-end"><%= user.tiketCount || 0 %></span>
      </li>
    </ul>
    <div class="d-grid gap-2">
      <a href="/" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left"></i> Kembali ke Beranda
      </a>
      <a href="/profile/edit" class="btn btn-primary">
        <i class="bi bi-pencil"></i> Edit Profil
      </a>
    </div>
  </div>
</div>
<%- include('./partials/footer') %>